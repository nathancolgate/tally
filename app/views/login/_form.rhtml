<div id="login">
<% if loggedin? -%>
Greetings, <%= link_to_user @session[:user] %>. <%=link_to_logout %>
<% else -%>
<%=login_form_remote_tag %>
<p>
  <%= link_to_signup %> or <label for="user_login">Login:</label>
  <input type="text" name="user_login" id="user_login" size="15" value=""/>
  <input type="password" name="user_password" id="user_password" size="15"/>
  <input type="submit" name="login" value="Login &#187;" class="primary" />
</p>
<%=end_form_tag %>
<% end -%>
</div>